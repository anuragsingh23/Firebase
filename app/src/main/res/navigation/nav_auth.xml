<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_auth"
    app:startDestination="@id/landingFragment">


    <fragment
        android:id="@+id/landingFragment"
        android:name="com.example.firebase.ui.extrafragments.LandingFragment"
        android:label="LandingFragment" >
        <action
            android:id="@+id/action_landingFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
        <action
            android:id="@+id/action_landingFragment_to_chatFragment2"
            app:destination="@id/chatFragment2" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.firebase.ui.authentication.signin.SignInFragment"
        android:label="SignInFragment" >
        <action
            android:id="@+id/action_signInFragment_to_confirmFragment"
            app:destination="@id/confirmFragment" />
        <action
            android:id="@+id/action_signInFragment_to_loginFragment"
            app:destination="@id/loginFragment" />




    </fragment>
    <fragment
        android:id="@+id/chatFragment2"
        android:name="com.example.firebase.ui.chat.ChatFragment"
        android:label="ChatFragment" >
        <action
            android:id="@+id/action_chatFragment2_to_signInFragment"
            app:destination="@id/signInFragment" />
        <action
            android:id="@+id/action_chatFragment2_to_messageFragment"
            app:destination="@id/messageFragment" />
    </fragment>

    <fragment
        android:id="@+id/confirmFragment"
        android:name="com.example.firebase.ui.authentication.confirmation.ConfirmFragment"
        android:label="ConfirmFragment" >
        <action
            android:id="@+id/action_confirmFragment_to_chatFragment2"
            app:destination="@id/chatFragment2"
            app:popUpTo="@id/confirmFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_confirmFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <argument
            android:name="name"
            app:argType="string"
            android:defaultValue='""'/>
        <argument
            android:name="countyCode"
            app:argType="string"
            android:defaultValue="+91"/>
        <argument
            android:name="phoneNumber"
            app:argType="string"
            android:defaultValue='""'/>
        <argument
            android:name="storedVerificationId"
            app:argType="string"
            android:defaultValue='""'/>
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.firebase.ui.authentication.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_confirmFragment"
            app:destination="@id/confirmFragment" />
        <action
            android:id="@+id/action_loginFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>
    <fragment
        android:id="@+id/messageFragment"
        android:name="com.example.firebase.ui.message.MessageFragment"
        android:label="fragment_message_fragmnt"
        tools:layout="@layout/fragment_message_fragmnt" >
        <action
            android:id="@+id/action_messageFragment_to_chatFragment2"
            app:destination="@id/chatFragment2" />
    </fragment>
</navigation>